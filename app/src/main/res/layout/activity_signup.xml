<!-- res/layout/activity_sign_in.xml -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/u22"
    android:padding="16dp">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif1"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="167dp"
        android:src="@drawable/img11" />

    <ImageView
        android:id="@+id/a2"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@drawable/a7" />

    <EditText
        android:id="@+id/firstnameid"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/rfn"
        android:textSize="20sp"
        android:hint=" First Name"
        android:inputType="text"
        android:padding="15dp" />

    <EditText
        android:id="@+id/lastnameid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/rln"
        android:textSize="20sp"
        android:hint=" Last Name"
        android:inputType="text"
        android:padding="15dp" />

    <EditText
        android:id="@+id/reg_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/rreg"
        android:textSize="20sp"
        android:hint=" Registration No."
        android:inputType="text"
        android:padding="15dp" />

    <EditText
        android:id="@+id/phone_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/rcal"
        android:textSize="20sp"
        android:hint=" Phone No."
        android:inputType="text"
        android:padding="15dp" />


    <EditText
        android:id="@+id/userid11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/rmail"
        android:textSize="20sp"
        android:hint=" User Email"
        android:inputType="textEmailAddress"
        android:padding="15dp" />

    <EditText
        android:id="@+id/passwordid11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/rpass"
        android:textSize="20sp"
        android:hint=" Password"
        android:inputType="textPassword"
        android:padding="15dp"
        android:layout_marginBottom="20dp"
        />


    <Button
        android:id="@+id/signupid11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_gravity="center"
        android:backgroundTint="#3D5AFE"
        android:layout_centerHorizontal="true"
        android:text="Register Now"/>



</LinearLayout>
